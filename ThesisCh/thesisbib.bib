	issn = {1424-8220},
	journal = {Sensors},
	number = {7},
	pages = {16484--16502},
	pubmedid = {26184193},
	title = {HyperCube: A Small Lensless Position Sensing Device for the Tracking of Flickering Infrared LEDs},
